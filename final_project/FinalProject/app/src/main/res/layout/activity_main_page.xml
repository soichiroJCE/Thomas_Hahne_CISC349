<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/showcaseTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Showcase"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:textAlignment="center"
        android:gravity="center" />

    <LinearLayout
        android:id="@+id/imageTextSection"
        android:layout_below="@id/showcaseTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:paddingTop="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/pica"
                android:scaleType="centerCrop"
                android:contentDescription="Image A" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test Prouct 1"
                android:padding="8dp"
                android:minHeight="48dp"
                android:gravity="center_vertical|center_horizontal"
                android:background="#EEEEEE"
                android:textSize="16sp"
                android:layout_marginStart="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/picb"
                android:scaleType="centerCrop"
                android:contentDescription="Image B" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test Product 2"
                android:padding="8dp"
                android:minHeight="48dp"
                android:gravity="center_vertical|center_horizontal"
                android:background="#EEEEEE"
                android:textSize="16sp"
                android:layout_marginStart="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/picc"
                android:scaleType="centerCrop"
                android:contentDescription="Image C" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test Product 3, but is really long where it needs more space."
                android:padding="8dp"
                android:minHeight="48dp"
                android:gravity="center_vertical|center_horizontal"
                android:background="#EEEEEE"
                android:textSize="16sp"
                android:layout_marginStart="16dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="3"
        android:paddingTop="8dp"
        android:paddingBottom="16dp">

        <Button
            android:id="@+id/buttonProductInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Products" />

        <Button
            android:id="@+id/buttonSocialPage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Social"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp" />

        <Button
            android:id="@+id/buttonStore"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Store" />
    </LinearLayout>
</RelativeLayout>